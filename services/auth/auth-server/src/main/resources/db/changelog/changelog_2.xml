<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.7"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.7
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.7.xsd">

    <changeSet id="1" author="diego">
        <createTable tableName="tb_user" schemaName="acessos">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_name" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="nome" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="account_non_expired" type="boolean">
                <constraints nullable="true"/>
            </column>
            <column name="account_non_locked" type="boolean">
                <constraints nullable="true"/>
            </column>
            <column name="credentials_non_expired" type="boolean">
                <constraints nullable="true"/>
            </column>
            <column name="enabled" type="boolean">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <addUniqueConstraint constraintName="uk_user_name"
                             schemaName="acessos"
                             columnNames="user_name"
                             tableName="tb_user"/>

    </changeSet>
    <changeSet id="2" author="diego">
        <createTable tableName="tb_role" schemaName="acessos">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="descricao" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="3" author="diego">
        <createTable tableName="tb_user_role" schemaName="acessos">
            <column name="id_user" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="id_role" type="bigint">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <addPrimaryKey columnNames="id_user, id_role"
                       constraintName="pk_user_role"
                       schemaName="acessos"
                       tableName="tb_user_role"/>

        <addForeignKeyConstraint baseColumnNames="id_user"
                                 baseTableName="tb_user_role"
                                 constraintName="fk_user_role"
                                 referencedColumnNames="id"
                                 referencedTableName="tb_user"/>

        <addForeignKeyConstraint baseColumnNames="id_role"
                                 baseTableName="tb_user_role"
                                 constraintName="fk_user_role_role"
                                 referencedColumnNames="id"
                                 referencedTableName="tb_role"/>
    </changeSet>
</databaseChangeLog>